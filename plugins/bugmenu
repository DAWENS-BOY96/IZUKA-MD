const { cmd } = require('../command');

cmd({
  pattern: 'bugmenu',
  desc: 'Displays the bug menu with available bug commands',
  category: 'bug',
  react: '🐞',
  filename: __filename
}, async (izuka, mek, m, { from, reply }) => {
  try {
    const bugMenuText = `
╭───『 🐞 BUG MENU 』
│
├❏ .bugspam <number> <message>
├❏ .freeze <number>
├❏ .crashwa <number>
├❏ .izuka-kill <number>
├❏ .bugcall <number>
│
╰─────────────
  `;
    await izuka.sendMessage(from, { text: bugMenuText }, { quoted: mek });
  } catch (e) {
    console.error(e);
    reply('❌ Error opening bug menu');
  }
});
